<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/cardViewBg"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingTop="8dp"
    app:contentPaddingBottom="8dp"
    app:contentPaddingRight="6dp">

    <com.example.lzc.daliylife.views.LotteryLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_lottery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lotteryTitle"
            android:textSize="16sp"
            tools:text="双色球" />

        <TextView
            android:id="@+id/tv_lottery_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_lottery_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_lottery_title"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            tools:text="双色球" />

        <TextView
            android:id="@+id/tv_lottery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_lottery_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_lottery_sub_title"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            tools:text="双色球" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_lottery_title">

            <LinearLayout
                android:id="@+id/ll_lottery_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/more_right" />
    </com.example.lzc.daliylife.views.LotteryLayout>

</android.support.v7.widget.CardView>