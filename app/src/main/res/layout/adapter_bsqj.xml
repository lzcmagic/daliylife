<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="6dip"
    app:cardElevation="2dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_avator"
            android:textSize="16sp"
            tools:text="zhangsan" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            tools:text="dsljfaslkdfjla" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_avator"
            android:layout_below="@+id/iv_avator"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            tools:text="lkdsjfldasjflasjdfksfj" />

        <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="240dp"-->
        <!--android:layout_below="@+id/tv_title"-->
        <!--android:layout_marginTop="10dp">-->

        <!--<VideoView-->
        <!--android:id="@+id/vv_relax_video"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone" />-->

        <com.lzc.daliylife.views.LotteryLayout
            android:id="@+id/fl_thumbnails_container"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_thumbnails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:contentDescription="@null"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/ib_thumbnails_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/thumbnail_play"
                android:contentDescription="@null" />
        </com.lzc.daliylife.views.LotteryLayout>


        <!--</FrameLayout>-->


    </RelativeLayout>


</android.support.v7.widget.CardView>